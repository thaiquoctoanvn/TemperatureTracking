<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimenLv3">

    <ImageView
        android:id="@+id/ivMem"
        android:layout_width="@dimen/dimenLv4"
        android:layout_height="@dimen/dimenLv4"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimenLv2"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSizeBodySmall"
        app:layout_constraintBottom_toBottomOf="@id/ivMem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivMem"
        app:layout_constraintTop_toTopOf="@id/ivMem"
        tools:text="Member" />
</androidx.constraintlayout.widget.ConstraintLayout>